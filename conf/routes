# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.filterList()
GET     /all                        controllers.Application.viewAllTaggables()
GET     /filter/view/:id            controllers.Application.viewFilter(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

## Tags
GET     /tag/list.json              controllers.TagController.list()
GET     /tag/listNames.json         controllers.TagController.listNames()
POST    /tag/add                    controllers.TagController.save()

## Taggables
GET     /taggable/list.json         controllers.TaggableController.list()
POST    /taggable/add               controllers.TaggableController.save()
POST    /taggable/remove            controllers.TaggableController.remove()
POST    /taggable/tag               controllers.TaggableController.tag()
POST    /taggable/untag             controllers.TaggableController.untag()
POST    /taggable/tagged            controllers.TaggableController.findTagged()

## Filters
GET     /filter/list.json           controllers.FilterController.list()
POST    /filter/add                 controllers.FilterController.save()
POST    /filter/addTags             controllers.FilterController.addTags()
POST    /filter/removeTag           controllers.FilterController.removeTag()
POST    /filter/getTaggables        controllers.FilterController.getTaggablesInFilter()